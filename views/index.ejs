<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
	<title>Test</title>
	<style>
		html {
			font-size: 112.5%;
		}

		form {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			height: 100vh;
		}

		img {
			max-width: 100%;
			height: auto;
		}

		button {
			display: inline-block;
			margin-top: 1rem;
			min-width: 15rem;
			padding: 1rem 1.5rem;
			border: 1px solid #4e8a4d;
			border-radius: 10px;
			cursor: pointer;
			background-color: hsl(94, 55%, 41%);
			font-family: inherit;
			font-size: inherit;
			letter-spacing: .8px;
			font-family: Arial, Helvetica, sans-serif;
			color: #e4e4e4;
		}

		.image-preview {
			max-width: 500px;
			border: 5px solid green;
    	border-radius: 5px;
		}
		
		[hidden] {
			display: none;
		}
	</style>
</head>

<body>
	<form class="form" action="/image" method="post" data-form>
		<input type="hidden" name="imageUrl" data-image-url />
		<div class="image-preview" data-image-preview-container hidden>
			<img data-image-preview />
		</div>
		<div class="ingredients" data-results></div>
		<button type="button" data-upload-image>Take photo of ingredients</button>
		<button type="submit" data-submit hidden>Read ingredients</button>
	</form>

	<script async src="https://widget.cloudinary.com/global/all.js"></script>
	<script src="/assets/upload-image.js"></script>
</body>
</html>
